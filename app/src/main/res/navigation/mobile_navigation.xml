        android:label="@string/menu_profile"
        android:layout="@layout/fragment_profile"
        />
    <fragment
        android:id="@+id/nav_task"
        android:name="com.example.aplicacion.ui.task.TaskFragment"
        android:label="@string/menu_task"
        android:layout="@layout/fragment_task"
        />
    <fragment
        android:id="@+id/nav_chat"
